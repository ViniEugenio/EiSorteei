@model EiSorteei.Data.OrderBump

@{
    ViewBag.Title = "Alterar Order Bump";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdministrador.cshtml";
}


@using (Html.BeginForm("Alterar", "OrderBump", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div style="display:flex; align-items:center; justify-content:center; margin-top:50px;">
        <div class="card" style="width:1200px;">

            <div class="card-header">
                <h3>Alterar Order Bump</h3>
            </div>

            <div class="card-body">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(o=>o.Id)
                @Html.HiddenFor(o=>o.DataCadastro)
                @Html.HiddenFor(o=>o.Status)
                @Html.HiddenFor(o=>o.Imagem)

                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label" })
                    <textarea name="Descricao">@Model.Descricao</textarea>
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label" })
                    <input class = "form-control" type = "number" min = "0.00", max = "10000.00" step = "0.01" placeholder = "Ex: 50,99/50.99" value="@Math.Round(Model.Valor, 2).ToString().Replace(",", ".")" name="ValorOrder"/>
                    @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Imagem, htmlAttributes: new { @class = "control-label" })
                    <input type="file" class="form-control" name="Imagem" />
                    @Html.ValidationMessageFor(model => model.Imagem, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="card-footer">
                <div class="form-group">
                    <button class="btn btn-success">Alterar</button>
                </div>
            </div>

        </div>
    </div>

}

<script src="https://cdn.ckeditor.com/4.15.0/standard/ckeditor.js"></script>
@section Scripts{

    <script>
        CKEDITOR.replace('Descricao');
    </script>
}

