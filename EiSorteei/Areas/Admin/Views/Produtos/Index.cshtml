@model IEnumerable<EiSorteei.Data.Produto>
@{
    ViewBag.Title = "Produtos Cadastrados";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdministrador.cshtml";
}


<div style="display:flex; align-items:center; justify-content:center; margin-top:50px;">
    <div class="card" style="width:1200px;">

        <div class="card-header">
            <h3>Produtos Cadastrados</h3>
            <a href="@Url.Action("CreateBlog")" class="btn btn-success">Cadastrar Novo Produto</a>
        </div>


        <div class="card-body">

            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-hover text-center">
                    <thead>
                        <tr>
                            <th>
                                Nome do Produto
                            </th>
                            <th>
                                Data de Cadastro
                            </th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            }

            else
            {
                <h2 class="text-center">Não foi encontrado nenhum Produto Cadastrado...</h2>
            }


        </div>

    </div>
</div>


