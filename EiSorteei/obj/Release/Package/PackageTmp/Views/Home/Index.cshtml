@{
    ViewData["Title"] = "Blog";
}

<style>
    body {
        background: #1F1F1F;
    }
</style>


<section class="blog-container">
    <div class="center">
        <div class="upper-box">
            <h1>Produtos</h1>
            <div class="Yellow_line"></div>
            <div class="bread"><a href="#">Home</a> <div class="ball"></div> <p>Produtos</p></div>
        </div>
    </div>
</section>
<section class="blog-listagem">
    <div class="center blog-border">
        <div class="blog-list">

            @foreach (var produto in ViewBag.Produtos)
            {
                <div class="card-blog">
                    <img src="~/Content/ImagemProdutos/@produto.Imagem" alt="blog" />
                    <div class="card-txt__blog">
                        <h2>@produto.Nome</h2>
                        <p>Valor da Rifa: R$ @Math.Round(produto.ValorRifa,2)</p>
                        <a href="@Url.Action("Index","Comprar",new { IdProduto = produto.Id})" style="margin:auto;">Comprar</a>
                    </div>
                </div>
            }

        </div>

