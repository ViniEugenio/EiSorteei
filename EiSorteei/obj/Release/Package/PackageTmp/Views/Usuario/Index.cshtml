@model EiSorteei.Models.LoginViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EiSorteei</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>


    <style>

        body {
            background-color: #1f1f1f;
        }

        #Login {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        #box_login {
            margin: 200px 0;
            width: 400px;
            height: 520px;
            background-color: #fff;
            border-radius: 20px;
        }

        #BtnLogin {
            background-color: #E0C777;
            border: none;
            color: #fff;
            width: 100px;
            height: 50px;
            border-radius: 20px;
            font-size: 20px;
            transition: all .3s ease-in-out;
        }

            #BtnLogin:hover {
                background-color: #F2CB4C;
            }
    </style>

    <div class="container body-content">
        @using (Html.BeginForm("Index", "Usuario"))
        {
            @Html.AntiForgeryToken()
            <section id="Login">

                <div class="card" id="box_login">

                    <div class="card-header">
                        <h2 class="text-center">Login</h2>
                    </div>

                    <div class="card-body">
                        <input value="@ViewBag.Produto" name="IdProduto" style="display:none;" />
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group text-center">
                            <button id="BtnLogin">Entrar</button>
                        </div>

                        <div class="form-group text-center">
                            Ainda não é usuário? <a href="@Url.Action("CadastrarUsuario","Usuario",new { IdProduto=ViewBag.Produto})">Clique aqui</a>
                        </div>
                    </div>

                </div>

            </section>
        }
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>