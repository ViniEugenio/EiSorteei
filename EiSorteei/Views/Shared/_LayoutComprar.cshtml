@{
    EiSorteei.Data.Usuario Usuario = (EiSorteei.Data.Usuario)@Session["Usuario"];
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EiSorteei</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link rel="font" href="~/Content/fonts/Amiri-Bold.ttf" />
    <link rel="font" href="~/Content/fonts/Amiri-BoldItalic.ttf" />
    <link rel="font" href="~/Content/fonts/Amiri-Italic.ttf" />
    <link rel="font" href="~/Content/fonts/Amiri-Regular.ttf" />
    <link href="~/Content/slick.css" rel="stylesheet" />
    <link rel="shortcut icon"
          href="~/Images/favicon.png"
          type="image/x-icon" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color:black; position:fixed;width: 100%;z-index:1;">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-align-justify" style="color:white;"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a href="@Url.Action("Index","Home")">
                    <img src="~/Imagens/Cópia de Logo Verde e Branco de Curso Preparatório (1).png" alt="Logo do Site" id="brand" style="width:80%;" />
                </a>
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color:#fff;">Política de Uso</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <a href="@Url.Action("Index","Usuario")" class="nav-link" style="color:#fff;">@(Usuario!=null?Usuario.Nome:"Login")</a>
                </form>
            </div>
        </nav>


    </header>

    @RenderBody()


    <style>

        #Quantidade {
            position: fixed;
            width: 100%;
            height: 150px;
            bottom: 0px;
            /* right: 112px; */
            background-color: white;
            color: #000;
            border-radius: 0px;
            font-size: 20px;
            z-index: 6;
            margin: unset;
            padding: 6px 5px;
        }

        #RifaEscolhida {
            background-color: rgb(37, 202, 23);
            border-radius: 24px;
            color: white;
            font-size: 18px;
            text-align: center;
            height: 30px;
            width: 40px;
            margin-top: 2px;
        }
    </style>

    <div id="Quantidade" style="padding-left:35px; display:none;">
        <div style="display:flex; flex-direction:row; flex-wrap:wrap; width:100%;">
            <div id="RifasEscolhidas" style="display:flex; flex-direction:row; flex-wrap:wrap; width:40%;"></div>

            <div class="text-center" id="ValorTotalRifa">
                <strong><span id="QuantidadeTotal"></span>x R$ <span id="ValorRifa"></span> = R$ <span id="ValorTotal"></span></strong>
                <div style="margin-top:10px;">
                    <button class="btn btn-success" id="AbrirModal">Finalizar Compra</button>
                </div>
            </div>

        </div>
    </div>
    <footer style="bottom: 0; width: 100%;margin-top: 30px;">
        <div class="row form-group" style="width:80%; margin:auto;">

            <div class="col-md-3 text-center">
                <h4><i class="fas fa-search"></i> Escolha uma Rifa</h4>
                <h5>Escolha o prêmio que gostaria de concorrer, verifique a descrição, regulamento do sorteio.</h5>
            </div>

            <div class="col-md-3 text-center">
                <h4><i class="fas fa-check-square"></i> Selecione seus Números</h4>
                <h5>Escolha quantos quiser! Quanto mais, mais chances de ganhar.</h5>
            </div>

            <div class="col-md-3 text-center">
                <h4><i class="fas fa-money-bill-alt"></i> Faça o Pagamento</h4>
                <h5>Escolha uma das formas de pagamento disponíveis, e realize o pagamento.</h5>
            </div>

            <div class="col-md-3 text-center">
                <h4><i class="fas fa-clock"></i> Aguarde o sorteio</h4>
                <h5>Agora é aguardar o sorteio, cruze os dedos e acompanhe a página para saber as novidades.</h5>
            </div>

        </div>
        <div class="center">
            <img src="~/Imagens/Cópia de Logo Verde e Branco de Curso Preparatório (1).png" alt="Dr. Marcelo Giovani" style="width: 220px; height: 84px;" />
            <p>Todos os direitos reservados</p>
        </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.14.1/standard/ckeditor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.6/dist/jquery.fancybox.min.js"></script>
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/site.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="https://secure.mlstatic.com/sdk/javascript/v1/mercadopago.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>


    @RenderSection("Scripts", required: false)

    <div id="myModal2" class="modal">

        <!-- Modal content -->
        <div class="modal-content" style=" width: 57%; justify-content: flex-start; height: 50%;">
            <i class="fas fa-times" style="float:right; align-self:flex-end; cursor:pointer;" id="Fechar"></i>
            <h2>Atenção <i class="fas fa-exclamation"></i></h2>
            <p> Bilhetes Selecionadas: <span id="RifasSelecionadas"></span></p>

            @*<div class="form-group">

                    <strong>Forma de Pagamento</strong>
                </div>

                <div class="form-group">

                    <span class="NumeroRifa" style="padding:10px; font-size: 16px;">Cartão de Crédito</span>
                    <span class="NumeroRifa" style="padding:10px; font-size: 16px; background-color:lightgray;">Boleto</span>

                </div>

                <div class="form-group" style="width:80%; text-align:start;">

                    <div class="row">

                        <div class="col-md-12 form-group">
                            <strong>Número do Cartão</strong>
                            <input type="text" class="form-control" placeholder="Digite o número do seu cartão" id="NumeroCartao" />
                            <span class="ErroComprar" id="ErroNumero">Campo Obrigatório</span>
                        </div>

                        <div class="col-md-6 form-group">
                            <strong>Nome do Titular</strong>
                            <input type="text" class="form-control" placeholder="Digite o nome do Titulo do Cartão" id="TituloCartao" />
