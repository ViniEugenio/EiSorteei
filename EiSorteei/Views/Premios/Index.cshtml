<div id="app-vue-render" style="position : relative">
    <div class="main ">
        <section id="page" class="p-t-3 pb-section">
            <div class="container">

                @using (Html.BeginForm("Index", "Premios", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-xs-12 m-b-1">
                            <div class="title-content text-xs-center">
                                <h4>Sorteios</h4>
                                <p>Filtre e veja todos os nossos sorteios!</p>
                            </div>
                        </div>
                        <div class="col-xs-12 m-t-1">
                            <form class="search-form" action="/sorteios" method="GET">
                                <div class="row row-flex align-end flex-wrap">
                                    <div class="col-md-3 col-xs-12 form-group">
                                        <label for="">Data do Sorteio</label>
                                        <input type="text" class="form-control" name="datasorteio" value="@ViewBag.DataSorteio" id="datasorteio">
                                    </div>
                                    <div class="col-md-3 col-xs-12 form-group">
                                        <label for="">Status:</label>
                                        <select name="status" class="form-control">
                                            <option value="0" @(ViewBag.Status == 0 ? "selected" : "")>Todos</option>
                                            <option value="1" @(ViewBag.Status == 1 ? "selected" : "")>Ativo</option>
                                            <option value="2" @(ViewBag.Status == 2 ? "selected" : "")>Finalizado</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4 col-xs-12 form-group">
                                        <label for="">Título:</label>
                                        <input type="text" class="form-control" name="titulo" value="@ViewBag.Titulo">
                                    </div>
                                    <div class="col-md-2 col-xs-12 form-group text-xs-center">
                                        <button type="submit" class="btn btn-default">
                                            Filtrar
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                }

                <div class="row m-t-2">
                    @if (Model.Count() > 0)
                    {
                        foreach (var produto in Model)
                        {
                            <div class="col-lg-6 col-md-6 col-xs-12">
                                <div class="sorteio-item">
                                    <div class="imagem">
                                        <a href="/sorteio/bmw-320i">
                                            <div class="carousel">
                                                <img style="height:260px;object-fit:cover" class="img-fluid" src="~/Content/ImagemProdutos/@produto.Imagem[0]" loading="lazy" alt="@produto.Nome">
                                            </div>
                                        </a>
                                    </div>
                                    <div class="side">
                                        <div class="status-desc">
                                            <span class="@(produto.Status == "Ativo"?"bg-success":"bg-danger")"></span>
                                            @produto.Status
                                        </div>
                                        <div class="infos">
                                            <div class="info">
                                                <i class="fa fa-calendar"></i>
                                                <span>Data do sorteio: @produto.DataSorteio.ToString("dd/MM/yyyy")</span>
                                            </div>
                                            <div class="info">
                                                <i class="fas fa-dollar-sign"></i>
                                                <span>Valor do Bilhete: <span class="text-orange"><span>R$</span> @Math.Round(produto.ValorRifa, 2)</span></span>
                                            </div>
                                        </div>
                                        <h5>@produto.Nome</h5>
                                        <p>Concorra a um carro sensacional</p>
                                        <div class="action">
                                            <a href="/sorteio/bmw-320i">Adquira seu bilhete <i class="fa fa-arrow-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                    else
                    {
                        <h3 style="text-align:center;">Nenhum produto foi encontrado!</h3>
                    }

                </div>
            </div>
        </section>
    </div>
  
</div>

