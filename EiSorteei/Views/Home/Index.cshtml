@{
    ViewData["Title"] = "Ei Sorteei";
}

<style>
    body {
        background: #1F1F1F;
    }

    #next, #prev {
        background-color: #E0C777;
        border-radius: 50%;
        padding: 10px 16px 10px 16px;
        margin: 10px;
        cursor: pointer;
    }
</style>


<section class="blog-container">
    <div class="center">
        <div class="upper-box">
            <h1>Ei Sorteei</h1>
        </div>
    </div>
</section>
<section class="blog-listagem">
    <div class="center blog-border">
        <div class="blog-list">

            @foreach (var produto in ViewBag.Produtos)
            {
                <div class="card-blog" style="z-index:0;">
                    <div class="carousel">
                        @foreach (var imagem in produto.Imagem)
                        {
                            <img src="~/Content/ImagemProdutos/@imagem"/>

                        }
                    </div>
                    <div class="card-txt__blog">
                        <div align="center" id="Arrows">
                            <i class="fas fa-chevron-left fa-2x" id="prev"></i>
                            <i class="fas fa-chevron-right fa-2x" id="next"></i>
                        </div>
                        <h1 class="text-center">@produto.Nome</h1>
                        <h2 class="text-center">Valor do Bilhete: R$ @Math.Round(produto.ValorRifa, 2)</h2>
                        <a href="@Url.Action("Index","Comprar",new { IdProduto = produto.Id})" style="margin:auto; background-color:rgb(37, 202, 23); border:none; color:#fff;">Escolher Bilhete</a>
                    </div>
                </div>
            }

        </div>

        @*<div class="pagination">

            <a href="@Url.Action("Index",new {pagina = ViewBag.Pagina - 1 })"><i class="fas fa-angle-left"></i></a>

            @for (int x = 1; x <= ViewBag.QuantidadeTotalPaginas; x++)
            {
                <a href="@Url.Action("Index",new { pagina=x-1})" class="@(ViewBag.Pagina==x-1?"active":"")">@x</a>
            }

            <a href="@Url.Action("Index",new {pagina = ViewBag.Pagina + 1 })"><i class="fas fa-angle-right"></i></a>
        </div>*@

    </div>
</section>